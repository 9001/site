{
	"name": "r-a-dio/site",
	"description": "R/a/dio's website.",
	"keywords": ["music", "anime", "r/a/dio"],
	"license": "MIT",
	"type": "project",
	"authors": [
		{
			"name": "Amelia Ikeda",
			"email": "amelia@amelia.pw",
			"role": "Developer",
			"homepage": "https://r-a-d.io"
		}
	],
	"repositories": [
		{
			"type": "git",
			"url": "https://github.com/r-a-dio/laravel-markdown"
		},
		{
			"type": "git",
			"url": "https://github.com/r-a-dio/laravel-hashing"
		},
		{
			"type": "git",
			"url": "https://github.com/r-a-dio/php-slack"
		},
		{
			"type": "git",
			"url": "https://github.com/r-a-dio/php-markdown"
		},
		{
			"packagist": false
		},
		{
			"type": "composer",
			"url": "https://packagist.org/"
		}
	],
	"require": {
		"laravel/framework": "5.0.*",
		"raven/raven": "0.7.1",
		"hiro/laravel-hashing": "dev-master-5",
		"hiro/laravel-markdown": "dev-master-5",
		"ezyang/htmlpurifier": "4.6.0",
		"michelf/php-markdown": "dev-lib",
		"recaptcha/php5": "v1.0.0",
		"nategood/httpful": "*",
		"elasticsearch/elasticsearch": "~1.0",
		"pda/pheanstalk": "~3.0",
		"james-heinrich/getid3": "^1.9",
		"laravelcollective/html": "~5.0",
		"predis/predis": "~1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"app/Http/Controllers",
			"app/Traits",
			"app/Models",
			"app/Console/Commands",
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		},
		"files": [
			"app/Helpers.php"
		]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
